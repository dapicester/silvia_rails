%header.navbar.navbar-fixed-top.navbar-inverse
  .container
    = link_to 'Silvia', root_path, id: 'logo'
    %nav
      %ul.nav.navbar-nav.navbar-right
        %li= link_to t('.home'), root_path
        %li= link_to t('.help'), help_path
        - if logged_in?
          %li= link_to t('.users'), '#'
          %li.dropdown
            %a.dropdown-toggle(href='#' data-toggle='dropdown')
              = t '.account'
              %b.caret
            %ul.dropdown-menu
              %li= link_to t('.profile'), current_user
              %li= link_to t('.settings'), '#'
              %li.divider
              %li= link_to t('.logout'), logout_path, method: 'delete'
        - else
          %li= link_to t('.login'), login_path
